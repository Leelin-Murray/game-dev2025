  <script>
    // Base class
    class MyAnimal {
      constructor(name, age) {
        this.name = name;
        this.age = age;
      }

      show() {
        document.getElementById('myDiv01').innerHTML = 
          `Hello ${this.name}, age ${this.age}<br>`;
      }
    }

